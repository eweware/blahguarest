<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">

    <display-name>Blahgua REST Service</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/conf/applicationConfiguration.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener> <!-- Listen to session create/destroy events -->
        <listener-class>main.java.com.eweware.service.rest.session.BlahguaSessionListener</listener-class>
    </listener>

    <filter> <!-- CORS support: configured to be totally public -->
        <filter-name>CORS</filter-name>
        <filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>
        <init-param>
            <param-name>cors.allowGenericHttpRequests</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>cors.allowOrigin</param-name>
            <param-value>*</param-value>
        </init-param>
        <init-param>
            <param-name>cors.supportedMethods</param-name>
            <param-value>GET, POST, HEAD, PUT, DELETE</param-value>
        </init-param>
        <init-param>
            <param-name>cors.supportedHeaders</param-name>
            <param-value>Content-Type Accept Origin</param-value>
        </init-param>
        <init-param>
            <param-name>cors.supportsCredentials</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CORS</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>  <!-- Support for URL rule rewriting: used to redirect http to https -->
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <servlet>
        <servlet-name>Jersey REST Service</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param> <!-- App class treats all classes in com.service.service as REST resources -->
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>main.java.com.eweware.service.App</param-value>
        </init-param>
        <init-param> <!-- JSON annotation support using Jackson libs -->
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>User Account Recovery Servlet</servlet-name>
        <servlet-class>main.java.com.eweware.service.servlet.UserSessionRecoveryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Web Client CSS Servlet</servlet-name>
        <servlet-class>main.java.com.eweware.service.servlet.WebClientCSSServlet</servlet-class>
        <description>Serves up CSS files to web client.</description>
    </servlet>

    <servlet-mapping>
        <servlet-name>Jersey REST Service</servlet-name>
        <url-pattern>/v2/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User Account Recovery Servlet</servlet-name>
        <url-pattern>/recover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Web Client CSS Servlet</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>15</session-timeout>
        <cookie-config>
            <name>BSID</name>
            <!--<http-only>true</http-only>-->
        </cookie-config>
    </session-config>

    <welcome-file-list>
        <!-- The blahgua site's starting page; most pages and resources are in S3 -->
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
